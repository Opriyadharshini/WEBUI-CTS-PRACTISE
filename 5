#bu{
    background-color: red;
    color:white;
    
}
var clickhere=document.getElementById('bu');
var clickhere1=document.getElementById('h2');
var clickhere2=document.getElementById('intext');

clickhere.addEventListener('click',function(){
colorchange();
intextchange();
});
function colorchange(){
clickhere1.style.color="red";
}
function intextchange(){
    var cli=clickhere2.value ;
    clickhere1.style.fontSize=cli+"px";
}










