  #red-button{
    background:red;
    color:white;
}
#green-button {
    background: green;
    color: white;
}
#blue-button {
    background: blue;
    color: white;
}
#color-box{
    height:100px;
    width:100px;
}












var clickhere=document.getElementById('color-box');
var clickhere2=document.getElementById('red-button');
var clickhere3 = document.getElementById('green-button');
var clickhere4 = document.getElementById('blue-button');
clickhere2.addEventListener('click',function(){
clickhere.style.backgroundColor="red";
});


clickhere3.addEventListener('click', function () {
    clickhere.style.backgroundColor = "green";
});




clickhere4.addEventListener('click', function () {
    clickhere.style.backgroundColor = "blue";
});
